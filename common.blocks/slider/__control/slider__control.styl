.slider__control
	top auto
	bottom 30px
	width 55px
	height 55px
	background-color #1a1a1a
	
	transition background-color 0.1s ease-in-out
	cursor pointer
	
	&:hover
		background-color #333
		
	&:before
		content ''
		position absolute
		top 50%
		left 20%
		right 20%
		height 1px
		background-color #777
		

		