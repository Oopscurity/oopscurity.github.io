.slider__item
	position relative
	
	&::before
		content ''
		position absolute
		top 0
		left 0
		z-index 900
		
		width 100%
		height 100%
		
		opacity 0
		background-color rgba(0, 0, 0, 0.7)
		background-image url('/img/slider__item.png')
		transition opacity 0.3s ease-out

	&:hover
		
		&::before
			opacity 0.7
		
		.slider__text-group
			top 40%
			opacity 1
		